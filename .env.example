
# SERVER CONFIGURATION
# The port the server will listen on. Google Cloud Run provides this automatically.
PORT=8080

# MAKE.COM WEBHOOK URLS
# Replace with your actual Make.com webhook URLs
MAKE_APPOINTMENT_WEBHOOK_URL=https://hook.make.com/your-unique-appointment-webhook-id
MAKE_EMAIL_WEBHOOK_URL=https://hook.make.com/your-unique-email-webhook-id

# TWILIO CREDENTIALS
# Get these from your Twilio console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_from_twilio
TWILIO_PHONE_NUMBER=+15551234567

# OPTIONAL: CLIENT-SPECIFIC CONFIGS
# You can use these to manage different configurations per client_id
CLIENT_123_TARGET_PHONE_NUMBER=+15559876543
CLIENT_123_TARGET_EMAIL=example@email.com
